# ============================================
# STRIPE PAYMENT INTEGRATION
# ============================================
# Copy this file to .env and fill in your actual values
# Get your keys from: https://dashboard.stripe.com/test/apikeys

# ============================================
# STRIPE API KEYS (Required)
# ============================================
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Frontend publishable key (Vite)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# ============================================
# APPLICATION URLS
# ============================================
FRONTEND_URL=http://localhost:5000

# ============================================
# STRIPE PRICE IDS
# ============================================
# Create these in Stripe Dashboard â†’ Products
# Each price ID starts with "price_"

# Renter One-Time Payment ($49)
STRIPE_PRICE_RENTER_UNLOCK=price_renter_unlock_id_here

# Landlord Plans
STRIPE_PRICE_LANDLORD_STARTER_MONTHLY=price_landlord_starter_monthly_id_here
STRIPE_PRICE_LANDLORD_STARTER_ANNUAL=price_landlord_starter_annual_id_here
STRIPE_PRICE_LANDLORD_PRO_MONTHLY=price_landlord_pro_monthly_id_here
STRIPE_PRICE_LANDLORD_PRO_ANNUAL=price_landlord_pro_annual_id_here
STRIPE_PRICE_LANDLORD_ENTERPRISE_MONTHLY=price_landlord_enterprise_monthly_id_here
STRIPE_PRICE_LANDLORD_ENTERPRISE_ANNUAL=price_landlord_enterprise_annual_id_here

# Agent Plans
STRIPE_PRICE_AGENT_BASIC_MONTHLY=price_agent_basic_monthly_id_here
STRIPE_PRICE_AGENT_BASIC_ANNUAL=price_agent_basic_annual_id_here
STRIPE_PRICE_AGENT_TEAM_MONTHLY=price_agent_team_monthly_id_here
STRIPE_PRICE_AGENT_TEAM_ANNUAL=price_agent_team_annual_id_here
STRIPE_PRICE_AGENT_BROKERAGE_MONTHLY=price_agent_brokerage_monthly_id_here
STRIPE_PRICE_AGENT_BROKERAGE_ANNUAL=price_agent_brokerage_annual_id_here

