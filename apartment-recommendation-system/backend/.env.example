# Application Settings
APP_NAME="Apartment Recommendation System"
APP_VERSION="1.0.0"
APP_ENV="development"
DEBUG=true
API_V1_STR="/api/v1"
PROJECT_NAME="Apartment Finder API"

# Server Settings
SERVER_HOST="0.0.0.0"
SERVER_PORT=8000
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Security
SECRET_KEY="your-super-secret-key-change-this-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
REFRESH_TOKEN_EXPIRE_DAYS=30
ALGORITHM="HS256"
BCRYPT_ROUNDS=12

# Database
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/apartment_db"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
REDIS_POOL_SIZE=10
REDIS_DECODE_RESPONSES=true

# Celery
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# Email Settings
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST="smtp.gmail.com"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAILS_FROM_EMAIL="noreply@apartmentfinder.com"
EMAILS_FROM_NAME="Apartment Finder"

# External APIs (Add your keys here)
GOOGLE_MAPS_API_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
OPENAI_API_KEY=""

# Scraping Settings
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
SCRAPING_TIMEOUT=30
SCRAPING_MAX_RETRIES=3
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_PERIOD=60

# Proxy Settings (if using proxy service)
PROXY_ENABLED=false
PROXY_SERVICE_URL=""
PROXY_API_KEY=""

# AI/ML Settings
MODEL_PATH="/app/models"
RECOMMENDATION_THRESHOLD=0.7
VECTOR_DIMENSION=384
MIN_RECOMMENDATIONS=5
MAX_RECOMMENDATIONS=50

# Monitoring
SENTRY_DSN=""
PROMETHEUS_ENABLED=true
LOG_LEVEL="INFO"

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Feature Flags
ENABLE_SCRAPING=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_OFFER_GENERATION=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBSOCKETS=false